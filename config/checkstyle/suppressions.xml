<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionXpathFilter Experimental Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2_xpath_experimental.dtd">

<suppressions>
    <suppress checks="VisibilityModifier" files="//*[MODIFIERS//*[@text = 'Value']]/descendant-or-self::node()"/>
    <suppress checks="TypeName" files="[\\/]db[\\/]migration"/>
    <suppress checks="HideUtilityClassConstructor" files="Application"/>
    <!-- Parameter suppression for controllers   -->
    <suppress checks="ParameterNumber"
              files="adapters[\\/]rest-spring[\\/]src[\\/]main[\\/]java[\\/]com[\\/]toptal[\\/]quizhub[\\/]rest[\\/]controllers"/>
    <suppress checks="MagicNumber"
              files="adapters[\\/]rest-spring[\\/]src[\\/]main[\\/]java[\\/]com[\\/]toptal[\\/]quizhub[\\/]rest[\\/]requests"/>
    <!-- Tests suppressions -->
    <suppress checks="MagicNumber" files=".*[\\/]src[\\/](test|integration-test)[\\/]"/>
    <suppress checks="VisibilityModifier" files=".*[\\/]src[\\/](test|integration-test)[\\/]"/>
    <suppress checks="CyclomaticComplexity" files=".*[\\/]src[\\/](test|integration-test)[\\/]"/>
    <suppress checks="ParameterNumber" files=".*[\\/]src[\\/](test|integration-test)[\\/]"/>
    <suppress checks="MethodLength" files=".*[\\/]src[\\/](test|integration-test)[\\/]"/>
</suppressions>
